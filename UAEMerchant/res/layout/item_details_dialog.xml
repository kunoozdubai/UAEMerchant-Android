<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_details_dialog"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#A3A3A1" />

    <RelativeLayout
        android:id="@+id/titleParent"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/title_background" >

        <TextView
            android:id="@+id/titleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Item Details"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mainParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleParent"
        android:layout_centerHorizontal="true" >

        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="7dp"
            android:text=""
            android:textColor="@android:color/black" />

        <RelativeLayout
            android:id="@+id/block1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp" >

            <ImageView
                android:id="@+id/photo1"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <ImageView
                android:id="@+id/photo2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/photo1" />

            <ImageView
                android:id="@+id/photo3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/photo2" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/locationIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/block1"
            android:layout_marginRight="5dp"
            android:background="@drawable/maps"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/block2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/block1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/priceHeadingTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Price: "
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/byHeadingTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/priceHeadingTxt"
                android:layout_marginTop="15dp"
                android:text="By:"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/cityHeadingTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/byHeadingTxt"
                android:layout_marginTop="15dp"
                android:text="City:"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/addressHeadingTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cityHeadingTxt"
                android:layout_marginTop="15dp"
                android:text="Address:"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/block3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/block2"
            android:layout_below="@id/block1"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/block2" >

            <TextView
                android:id="@+id/priceTxt"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:background="@drawable/black_btn"
                android:gravity="center"
                android:text=""
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/byTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/priceTxt"
                android:layout_marginTop="15dp"
                android:text=""
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/cityTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/byTxt"
                android:layout_marginTop="15dp"
                android:text=""
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/addressTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cityTxt"
                android:layout_marginTop="15dp"
                android:text=""
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <TextView
            android:id="@+id/dateHeadingTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/block2"
            android:layout_below="@id/block3"
            android:layout_marginTop="10dp"
            android:text="Date:"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/dateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/dateHeadingTxt"
            android:layout_alignLeft="@id/block3"
            android:text=""
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/descriptionHeadingTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/block1"
            android:layout_below="@id/dateHeadingTxt"
            android:layout_marginTop="10dp"
            android:text="Description:"
            android:textColor="@android:color/white" />

        <RelativeLayout
            android:id="@+id/descriptionScrollView"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_alignLeft="@id/block1"
            android:layout_below="@id/descriptionHeadingTxt"
            android:layout_centerHorizontal="true" >

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/descriptionTxt"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="@android:color/black" />
            </ScrollView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/block4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp" >

            <ImageView
                android:id="@+id/messageBtn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/msg_icon" />

            <ImageView
                android:id="@+id/callBtn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/messageBtn"
                android:background="@drawable/phone_icon" />

            <ImageView
                android:id="@+id/emailBtn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/callBtn"
                android:background="@drawable/email_icon" />

            <ImageView
                android:id="@+id/facebookBtn"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/emailBtn"
                android:background="@drawable/social_facebook" />

            <ImageView
                android:id="@+id/twitterBtn"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/facebookBtn"
                android:background="@drawable/social_twitter" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>