<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_details_dialog"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#87ab56" />

    <RelativeLayout
        android:id="@+id/titleParent"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/title_background" >

        <TextView
            android:id="@+id/titleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/categories_text"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mainParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleParent"
        android:layout_centerHorizontal="true" >

        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="7dp"
            android:text="Item Title"
            android:textColor="@android:color/black" />

        <RelativeLayout
            android:id="@+id/block1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp" >

            <ImageView
                android:id="@+id/photo1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/car_plate" />

            <ImageView
                android:id="@+id/photo2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/photo1"
                android:background="@drawable/car_plate" />

            <ImageView
                android:id="@+id/photo3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/photo2"
                android:background="@drawable/car_plate" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/locationIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/block1"
            android:layout_marginRight="5dp"
            android:background="@drawable/maps" />

        <RelativeLayout
            android:id="@+id/block2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/block1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/priceHeadingTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: "
                android:layout_marginTop="7dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/byHeadingTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/priceHeadingTxt"
                android:layout_marginTop="15dp"
                android:text="By:"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/cityHeadingTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/byHeadingTxt"
                android:layout_marginTop="15dp"
                android:text="City:"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/addressHeadingTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cityHeadingTxt"
                android:layout_marginTop="15dp"
                android:text="Address:"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/block3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/block2"
            android:layout_below="@id/block1"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/block2" >

            <TextView
                android:id="@+id/priceTxt"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:text="123456789"
                android:gravity="center"
                
                android:background="@drawable/black_btn"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/byTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/priceTxt"
                android:layout_marginTop="15dp"
                android:text="Waqas Butt"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/cityTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/byTxt"
                android:layout_marginTop="15dp"
                android:text="Gujrat"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/addressTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cityTxt"
                android:layout_marginTop="15dp"
                android:text="Kacha sanda raj garh, near karam elahi park Lahore, Pakistan"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <TextView
            android:id="@+id/dateHeadingTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/block2"
            android:layout_below="@id/block3"
            android:layout_marginTop="10dp"
            android:text="Date:"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/dateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/dateHeadingTxt"
            android:layout_alignLeft="@id/block3"
            android:text="6th oct 2012"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/descriptionHeadingTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/block1"
            android:layout_below="@id/dateHeadingTxt"
            android:layout_marginTop="10dp"
            android:text="Description:"
            android:textColor="@android:color/white" />

        <RelativeLayout
            android:id="@+id/descriptionScrollView"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignLeft="@id/block1"
            android:layout_below="@id/descriptionHeadingTxt"
            android:layout_centerHorizontal="true"
            >

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/descriptionTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="this is a very nice sofa, your kids can play on it they can use it like a trumpad that elastic thing which doesnt break off and the kid goes really high in the air its bloody awesome dude try it buy it fucking buy it man"
                    android:textColor="@android:color/black" />
            </ScrollView>
        </RelativeLayout>
        
        
        <RelativeLayout
            android:id="@+id/block4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
             >
            <ImageView
                android:id="@+id/messageBtn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                
                android:background="@drawable/msg_icon" />

            <ImageView
                android:id="@+id/callBtn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/messageBtn"
                android:background="@drawable/phone_icon" />

            <ImageView
                android:id="@+id/emailBtn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/callBtn"
                android:background="@drawable/email_icon" />
        </RelativeLayout>

        
        
    </RelativeLayout>

</RelativeLayout>