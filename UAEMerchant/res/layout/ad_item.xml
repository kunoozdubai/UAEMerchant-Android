<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    >
    <RelativeLayout
        android:id="@+id/mainParent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/thumbnailImg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            />
        
               
        <TextView
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@id/thumbnailImg"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignTop="@id/thumbnailImg"
            android:gravity="left"
            android:text="this is item name"
            />
        
        <RelativeLayout
        android:id="@+id/block1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemName"
        android:layout_alignLeft="@id/itemName"
        android:layout_marginTop="5dp"
        >
        
            <TextView
            android:id="@+id/priceHeadingTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="1dp"
            android:text="Price: "
            />
        <TextView
            android:id="@+id/byHeadingTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_below="@id/priceHeadingTxt"
            android:text="By: "
            android:layout_marginTop="1dp"
            />
        
        <TextView
            android:id="@+id/dateHeadingTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_below="@id/byHeadingTxt"
            android:text="Date: "
            android:layout_marginTop="1dp"
            />
         
        </RelativeLayout>
        <RelativeLayout
        android:id="@+id/block2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/block1"
        android:layout_below="@id/itemName"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        >
           <TextView
            android:id="@+id/priceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="223244 "
            android:layout_marginTop="1dp"
            />
        <TextView
            android:id="@+id/byTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_below="@id/priceTxt"
            android:text="Mr.abc "
            android:layout_marginTop="1dp"
            />
        
        <TextView
            android:id="@+id/dateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_below="@id/byTxt"
            android:text="6 oct 2012 "
            android:layout_marginTop="1dp"
            />
        </RelativeLayout>
        
        
        
         
        
    </RelativeLayout>

</RelativeLayout>