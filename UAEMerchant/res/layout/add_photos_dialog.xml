<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_photos_dialog"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/backgourndImg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#0ffafb" />

    <RelativeLayout
        android:id="@+id/titleParent"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_background" >

        <TextView
            android:id="@+id/titleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Photos"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/postBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="Post"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mainParent"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@id/titleParent"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:id="@+id/block1"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginTop="8dp" >

            <ImageView
                android:id="@+id/photo1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/car_plate"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/removePhoto1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/remove"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/block2"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/block1" >

            <ImageView
                android:id="@+id/photo2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/car_plate"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/removePhoto2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/remove"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/block3"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/block2" >

            <ImageView
                android:id="@+id/photo3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/photo2"
                android:background="@drawable/car_plate"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/removePhoto3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/remove"
                android:visibility="visible" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/addPhotoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/add"
            android:visibility="visible" />
    </RelativeLayout>
</RelativeLayout>